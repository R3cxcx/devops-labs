pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh '''
                echo Building Docker image...
                docker build -t my-flask-app:latest ./03-docker
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                echo Running container for testing...
                # Remove any old test container
                docker rm -f test-app || true

                # Run container on the same network as Jenkins
                docker run -d --name test-app --network jenkins-net -p 5000:5000 my-flask-app:latest

                # Give Flask a few seconds to start
                sleep 5

                # Test by calling the container by its name (not localhost)
                curl http://test-app:5000
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                echo Deploying Flask app...
                docker rm -f flask-app || true
                docker run -d --name flask-app -p 5000:5000 my-flask-app:latest
                '''
            }
        }
    }
}
